{
    "compilerOptions": {
        "target": "es6",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "noUnusedParameters": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
    },
    "include": [
        "src/**/*"
    ]
}